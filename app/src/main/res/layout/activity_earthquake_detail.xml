<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EarthquakeDetail">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="10dp" >

        <TextView
            android:id="@+id/cellTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title" />

        <TextView
            android:id="@+id/cellPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place" />

        <TextView
            android:id="@+id/cellDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date" />

        <TextView
            android:id="@+id/cellTsunami"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tsunami" />

        <TextView
            android:id="@+id/cellCoords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coords" />

        <TextView
            android:id="@+id/cellDepth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Depth" />

        <TextView
            android:id="@+id/cellMagnitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Magnitude" />

    </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>